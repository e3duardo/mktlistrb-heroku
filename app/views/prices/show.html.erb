<p>
  <strong><%= Price.human_attribute_name(:product) %>:</strong>
  <%= @price.product.name %>
</p>

<p>
  <strong><%= Price.human_attribute_name(:store) %>:</strong>
  <%= @price.store.name %>
</p>

<p>
  <strong><%= Price.human_attribute_name(:price) %>:</strong>
  <%= number_to_currency(@price.price) %>
</p>

<% content_for :footer_buttons do %>
    <%= link_to raw(t('btn_edit', model: Price.model_name.human)), edit_price_path(@price), :class => 'btn btn-primary' %>
    <%= link_to raw(t('btn_add', model: Price.model_name.human)), prices_path, :class => 'btn btn-default' %>
    <%= link_to raw(t('btn_back', model: Price.model_name.human)), prices_path, :class => 'btn btn-default' %>
<% end %>