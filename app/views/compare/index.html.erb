<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= t('mktlist-server') %></title>
  <script charset="UTF-8" type="text/javascript" src="http://ecn.dev.virtualearth.net/mapcontrol/mapcontrol.ashx?v=7.0"></script>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'map', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body lang="<%= I18n.locale %>">


<div class="container-fluid">

  <form>

    <label>quantidade</label>

    <div class="row">
      <div class="col-xs-8">
        <input type="number" class="form-control" placeholder="quantidade" id="count">
      </div>
      <div class="col-xs-4">
        <select class="selectpicker form-control in_calc" id="count_unit">
          <option value="g">g</option>
          <option value="kg">kg</option>
        </select>
      </div>
    </div>

    <br><br>
    <label>preco da loja</label>

    <div class="row">
      <div class="col-xs-8">
        <div class="form-group">
          <div class="row">
            <div class="col-xs-8">
              <input type="number" class="form-control in_calc" placeholder="preco por unidade" id="price_1">
            </div>
            <div class="col-xs-4">
              <select class="selectpicker form-control in_calc" id="price_1_unit">
                <option value="g">g</option>
                <option value="kg">kg</option>
              </select>
            </div>
          </div>
        </div>
      </div>
      <div class="col-xs-4">
        <input type="text" class="form-control" placeholder="total" id="total_1" readonly>
      </div>
    </div>

    <label>preco da loja</label>

    <div class="row">
      <div class="col-xs-8">
        <div class="form-group">
          <div class="row">
            <div class="col-xs-8">
              <input type="number" class="form-control in_calc" placeholder="preco por unidade" id="price_2">
            </div>
            <div class="col-xs-4">
              <select class="selectpicker form-control in_calc" id="price_2_unit">
                <option value="g">g</option>
                <option value="kg">kg</option>
              </select>
            </div>
          </div>
        </div>
      </div>
      <div class="col-xs-4">
        <input type="text" class="form-control" placeholder="total" id="total_2" readonly>
      </div>
    </div>

    <label>preco da loja</label>

    <div class="row">
      <div class="col-xs-8">
        <div class="form-group">
          <div class="row">
            <div class="col-xs-8">
              <input type="number" class="form-control in_calc" placeholder="preco por unidade" id="price_3">
            </div>
            <div class="col-xs-4">
              <select class="selectpicker form-control in_calc" id="price_3_unit">
                <option value="g">g</option>
                <option value="kg">kg</option>
              </select>
            </div>
          </div>
        </div>
      </div>
      <div class="col-xs-4">
        <input type="text" class="form-control" placeholder="total" id="total_3" readonly>
      </div>
    </div>


  </form>
</div>

<script>
  function calc_price(c, c_un, pr, pr_un) {
    var count = 0;
    if (pr_un == 'g') {
      if (c_un == 'g') {
        count = c;
      }
      else if (c_un == 'kg') {
        count = c * 1000;
      }
    }
    else if (pr_un == 'kg') {
      if (c_un == 'g') {
        count = c / 1000;
      }
      else if (c_un == 'kg') {
        count = c;
      }
    }

    return pr * count;
  }
  $(function () {
    $('.in_calc').change(function () {
      $('#total_1').val(calc_price($('#count').val(), $('#count_unit').val(), $('#price_1').val(), $('#price_1_unit').val()));
      $('#total_2').val(calc_price($('#count').val(), $('#count_unit').val(), $('#price_2').val(), $('#price_2_unit').val()));
      $('#total_3').val(calc_price($('#count').val(), $('#count_unit').val(), $('#price_3').val(), $('#price_3_unit').val()));
    });
  })
</script>

</body>
</html>