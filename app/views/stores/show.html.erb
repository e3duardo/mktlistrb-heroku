<p>
  <strong>nome:</strong>
  <%= @store.name %>
</p>

<p>
  <strong>descrição:</strong>
  <%= @store.description %>
</p>

<p>
  <strong>latitude:</strong>
  <%= @store.latitude %>
</p>

<p>
  <strong>longitude:</strong>
  <%= @store.longitude %>
</p>

<div id='map' style="position:relative; width:100%; height:300px; margin-top: 35px;"></div>

<hr/>
<%= link_to (fa_icon 'pencil').to_s, edit_store_path(@store), :class => 'btn btn-primary' %>
<%= link_to (fa_icon 'arrow-left').to_s, stores_path, :class => 'btn btn-default' %>

<% content_for :outcontainer do %>
    <script type="text/javascript">
      $(document).ready(function () {
        var mapOptions = {
          credentials: "Ao5-_dQImrnCf2P1U9Mwgdpw_Yo0h5p5TBbPN4dZPqpwbgqFLv497crtoOsSW6bX",
          mapTypeId: Microsoft.Maps.MapTypeId.road
        }

        var map = new Microsoft.Maps.Map(document.getElementById("map"), mapOptions);

        var loc = new Microsoft.Maps.Location(parseInt(<%=@store.latitude%>), parseInt(<%=@store.longitude%>));
        var pin = new Microsoft.Maps.Pushpin(loc);
        map.entities.push(pin);
        map.setView({center: loc, zoom: 6});
      });
    </script>
<% end %>