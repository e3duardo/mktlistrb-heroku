<h2>produtos</h2>

<div class="table-responsive">
  <table class="table table-hover table-condensed">
    <tr>
      <th width="30%">nome</th>
      <th width="55%">codinome</th>
      <th width="16px"></th>
      <th width="16px"></th>
      <th width="16px"></th>
    </tr>

    <% if @products.any? %>
        <% @products.each do |product| %>
            <tr>
              <td><%= product.name %></td>
              <td><%= product.alias %></td>
              <td><%= link_to (fa_icon 'eye').to_s, product_path(product) %></td>
              <td><%= link_to (fa_icon 'pencil').to_s, edit_product_path(product) %></td>
              <td><%= link_to (fa_icon 'trash').to_s, product_path(product), method: :delete, data: {confirm: 'tem certeza?'} %></td>
            </tr>
        <% end %>
    <% else %>
        <tr class="text-center">
          <td colspan="5">Nenhum produto encontrado.</td>
        </tr>
    <% end %>
  </table>

  <div class="text-center">
    <%= paginate @products %>
  </div>
</div>

<%= link_to (fa_icon 'plus').to_s, new_product_path, :class => 'btn btn-primary' %>