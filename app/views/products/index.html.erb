<h2><%=Product.model_name.human%></h2>

<div class="table-responsive">
  <table class="table table-hover table-condensed">
    <tbody>
    <tr>
      <th width="45%"><%=Product.human_attribute_name(:name)%></th>
      <th width="55%"><%=Product.human_attribute_name(:alias)%></th>
      <th width="1px" colspan="3"></th>
    </tr>
    <% @products.each do |product| %>
        <tr>
          <td><%= product.name %></td>
          <td><%= product.alias %></td>
          <td><%= link_to (fa_icon 'eye').to_s, product_path(product) %></td>
          <td><%= link_to (fa_icon 'pencil').to_s, edit_product_path(product) %></td>
          <td><%= link_to (fa_icon 'trash').to_s, product_path(product), method: :delete, data: {confirm: 'tem certeza?'} %></td>
        </tr>
    <% end %>
    </tbody>
    <tfoot>
    <% if @products.blank? %>
        <tr class="text-center">
          <td colspan="5">nenhum registro encontrado</td>
        </tr>
    <% else %>
        <tr class="text-center">
          <td colspan="5"></td>
        </tr>
    <% end %>
    </tfoot>
  </table>
</div>

<div class="text-center">
  <%= paginate @products %>
</div>

<hr/>
<%= link_to (fa_icon 'plus').to_s, new_product_path, :class => 'btn btn-primary' %>