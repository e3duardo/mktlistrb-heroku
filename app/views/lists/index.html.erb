<h2>listas</h2>

<div class="table-responsive">
  <table class="table table-hover table-condensed">
    <tr>
      <th width="70%">nome</th>
      <th width="30%">loja</th>
      <th width="16px"></th>
      <th width="16px"></th>
      <th width="16px"></th>
    </tr>

    <% if @lists.any? %>
        <% @lists.each do |f| %>
            <tr>
              <td><%= f.name %></td>
              <td><%= f.store.nil? ? '' : f.store.name %></td>
              <td><%= link_to (fa_icon 'eye').to_s, list_path(f) %></td>
              <td><%= link_to (fa_icon 'pencil').to_s, edit_list_path(f) %></td>
              <td><%= link_to (fa_icon 'trash').to_s, list_path(f), method: :delete, data: {confirm: 'Are you sure?'} %></td>
            </tr>
        <% end %>
    <% else %>
        <tr class="text-center">
          <td colspan="5">Nenhuma lista encontrado.</td>
        </tr>
    <% end %>
  </table>

  <div class="text-center">
    <%= paginate @lists %>
  </div>
</div>


<div class="hr"> </div>
<%= link_to (fa_icon 'plus').to_s, new_list_path, :class => 'btn btn-primary' %>