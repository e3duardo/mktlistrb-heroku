<h2><%= UserPrice.model_name.human %></h2>

<div class="table-responsive">
  <table class="table table-hover table-condensed">
    <tbody>
    <tr>
      <th width="70%"><%= UserPrice.human_attribute_name(:product) %></th>
      <th width="30%" class="text-right"><%= UserPrice.human_attribute_name(:price) %></th>
    </tr>

    <% @userprices.each do |p| %>
        <tr>
          <td><%= p.product.nil? ? p.product_name+ ' '+ p.product_alias : p.product.full_name %></td>
          <td class="text-right"><%= number_to_currency(p.price) %></td>
        </tr>
    <% end %>
    </tbody>
    <tfoot>
    <% if @userprices.blank? %>
        <tr class="text-center">
          <td colspan="6"><%= raw t(:no_record, model: UserPrice.model_name.human) %></td>
        </tr>
    <% end %>
    </tfoot>
  </table>
</div>

<%= paginate @userprices %>

<% content_for :footer_buttons do %>
    <%= link_to raw(t('btn_add', model: UserPrice.model_name.human)), user_prices_path, :class => 'btn btn-primary' %>
<% end %>